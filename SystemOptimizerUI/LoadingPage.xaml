<Window x:Class="SystemOptimizerUI.LoadingPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Loading" WindowStartupLocation="CenterScreen" Height="200" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Processing..." FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0, 0, 0, 10"/>
            <ProgressBar IsIndeterminate="True" Width="200" Height="20" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
